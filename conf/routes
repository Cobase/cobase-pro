# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User Control
GET         /                                @cobase.play.user.ApplicationController.index
GET         /sign-in                         @cobase.play.user.AuthenticationController.signIn
GET         /sign-out                        @cobase.play.user.AuthenticationController.signOut
GET         /sign-up                         @cobase.play.user.SignUpController.signUpForm
POST        /sign-up                         @cobase.play.user.SignUpController.signUp
GET         /authenticate/:provider          @cobase.play.user.SocialAuthController.authenticate(provider)
POST        /authenticate/credentials        @cobase.play.user.CredentialsAuthController.authenticate

# Group related
GET         /groups/add                      @cobase.play.group.GroupController.addGroupForm
POST        /groups                          @cobase.play.group.GroupController.addGroup
GET         /group/:groupId/edit             @cobase.play.group.GroupController.editGroupForm(groupId: String)
POST        /group/:groupId                  @cobase.play.group.GroupController.editGroup(groupId: String)
GET         /group/:groupId/subscribe        @cobase.play.group.GroupController.subscribe(groupId: String)
GET         /group/:groupId/unsubscribe      @cobase.play.group.GroupController.unsubscribe(groupId: String)

# Post related
GET         /post/:postId/edit               @cobase.play.post.PostController.editPostForm(postId: String)
POST        /post/:postId                    @cobase.play.post.PostController.editPost(postId: String)
GET         /group/:groupId/posts            @cobase.play.post.PostController.viewPosts(groupId: String)
POST        /group/:groupId/posts            @cobase.play.post.PostController.addPost(groupId: String)

# Search
GET         /posts/search                    @cobase.play.post.SearchController.searchPosts

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)
